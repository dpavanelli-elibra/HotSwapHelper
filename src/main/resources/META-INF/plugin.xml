<idea-plugin>
    <id>com.bruce.hotswapHelper</id>
    <name>HotSwapHelper</name>
    <vendor email="gejun123456@gmail.com" url="https://github.com/gejun123456/HotSwapHelper">bruce-ge</vendor>
    <description><![CDATA[
        <div>
            <p>Based on HotSwapAgent, reload code without restarting the application.</p>
            <p>Support many framework like spring,hibernate,mybatis ect</p>
        </div>
        <h3>中文：</h3>
        <p>基于HotSwapAgent开发的idea插件,实现热部署功能，支持spring,hibernate,mybatis等框架</p>
        <p>jrebel的免费替代</p>
        <p>测试已支持若依等项目，支持xml和java文件热部署</p>
        ]]></description>

    <change-notes><![CDATA[
        <p>1.0.0</p>
        <ul>
            <li>1.Support run with hotswap agent</li>
            <li>2.Support many framework include spring,mybatis ect</li>
        </ul>
<!--        <p>More <a href="https://github.com/makejavas/EasyCode">Help Info</a>.</p>-->
        ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="191"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products

    -->
    <!--必须为企业版-->
    <depends>com.intellij.modules.lang</depends>

    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="NONE" id="hot.swap.notification.none"/>
        <notificationGroup displayType="BALLOON" id="hot.swap.notification.balloon"/>
        <executor implementation="com.myhotswap.HotSwapExecutor"/>
        <executor implementation="com.myhotswap.HotSwapDebugExecutor"/>
        <programRunner implementation="com.myhotswap.runner.HotSwapRunner"/>
        <programRunner implementation="com.myhotswap.runner.HotSwapDebugRunner"/>
        <java.programPatcher implementation="com.myhotswap.runner.HotswapPatcher"/>

    </extensions>

    <actions>
        <group>
            <action id="com.hotswap.plugin.action.HotSwapAction" icon="PluginIcons.ICON_16"
                    class="com.myhotswap.HotSwapAction" text="HotSwapAgent" description="HotSwapAgent">
            </action>

            <action id="com.hotswap.plugin.action.HotSwapDebugAction" icon="PluginIcons.ICONDBUG_16"
                    class="com.myhotswap.HotSwapDebugAction" text="HotSwapAgentDebug" description="HotSwapAgentDebug">
            </action>
            <add-to-group group-id="RunDashboardContentToolbar" anchor="last"/>
        </group>

    </actions>

    <applicationListeners>
        <listener class="com.myhotswap.StartUpListener" topic="com.intellij.ide.AppLifecycleListener" />
    </applicationListeners>

</idea-plugin>
